extends layout.pug

block number1 
    if error
        p.error Please Fill the Input

    if success
        p.success Good Job

    if deleted
        p.success Deleted 

    form.form(action='/add' method='POST')
        input.input(type='text', placeholder='Add your todo' name='todo')
        button.btn Add

    div.todos 
        if (todos.length)  
            each todo in todos
                p.todo
                    input.input(type='checkbox' id='check_box')
                    if todo.done
                        a.done(href=`/${ todo.id}/update`) #{ todo.description}
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class='check'><path d="M438.6 105.4C451.1 117.9 451.1 138.1 438.6 150.6L182.6 406.6C170.1 419.1 149.9 419.1 137.4 406.6L9.372 278.6C-3.124 266.1-3.124 245.9 9.372 233.4C21.87 220.9 42.13 220.9 54.63 233.4L159.1 338.7L393.4 105.4C405.9 92.88 426.1 92.88 438.6 105.4H438.6z"/></svg>
                    else
                        a.undone(href=`/${ todo.id}/update`) #{ todo.description}
                    a.delete(href=`/${ todo.id }/delete`) Delete
        else
            p.todo No Tasks!
